extends layouts/login-layout.pug

block content
    .login-container
        h1 Login 
        form(method="post")
            p.error-message #{errorMsg}
            input(type="text", name="logUsername", value=logUsername, placeholder="Username", required="true")
            input(type="password", name="logPassword", placeholder="Password", required="")
            input(type="submit", value="Login")
        a(href="/register") Create An Account